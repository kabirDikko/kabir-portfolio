---
interface Props {
  title: string;
  moreLink: string;
}

const { title, moreLink } = Astro.props;
---

<section class="flex-col gap-4 mt-8 font-mono">
  <h2 class="text-sm text-text-subheading mb-2">
    >> {title}
  </h2>
  <div class="flex flex-col md:flex-row gap-4">
    <slot />
    <a class="text-text-body self-end text-sm" href={moreLink}>more &rarr;</a>
  </div>
</section>
