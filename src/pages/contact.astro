---
import Layout from "../layouts/Layout.astro";
import SectionHeading from "../components/SectionHeading.astro";
---

<Layout title="Contact - Kabir Dikko">
  <div class="page-container">
    <SectionHeading
      title="Get in Touch"
      subtitle="Have a question or want to work together? I'd love to hear from you."
    />

    <div class="grid md:grid-cols-2 gap-12 mt-12">
      <div>
        <h3 class="text-2xl font-bold mb-6">Contact Information</h3>

        <div class="space-y-6">
          <div class="glass-card p-6 flex items-start">
            <div class="bg-primary/10 p-3 rounded-lg mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-primary"
                ><path
                  d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path></svg
              >
            </div>
            <div>
              <h4 class="font-medium mb-1">Phone</h4>
              <p class="text-muted-foreground">+44 7492 753377</p>
            </div>
          </div>

          <div class="glass-card p-6 flex items-start">
            <div class="bg-primary/10 p-3 rounded-lg mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-primary"
                ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                  d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
              >
            </div>
            <div>
              <h4 class="font-medium mb-1">Email</h4>
              <p class="text-muted-foreground">kabir.dikko97@gmail.com</p>
            </div>
          </div>

          <div class="glass-card p-6 flex items-start">
            <div class="bg-primary/10 p-3 rounded-lg mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-primary"
                ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                ></path><circle cx="12" cy="10" r="3"></circle></svg
              >
            </div>
            <div>
              <h4 class="font-medium mb-1">Location</h4>
              <p class="text-muted-foreground">London, UK</p>
            </div>
          </div>
        </div>

        <h3 class="text-2xl font-bold mt-12 mb-6">Connect with Me</h3>
        <div class="flex gap-4">
          <a
            href="https://github.com/kabirDikko"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-primary/10 p-3 rounded-lg hover:bg-primary/20 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
              ><path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
              ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
            >
          </a>
          <a
            href="https://linkedin.com/in/kabirDikko"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-primary/10 p-3 rounded-lg hover:bg-primary/20 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
              ><path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path><rect width="4" height="12" x="2" y="9"></rect><circle
                cx="4"
                cy="4"
                r="2"></circle></svg
            >
          </a>
          <a
            href="https://twitter.com/kabirDikkodev"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-primary/10 p-3 rounded-lg hover:bg-primary/20 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
              ><path
                d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
              ></path></svg
            >
          </a>
          <a
            href="https://dev.to/kabirDikko"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-primary/10 p-3 rounded-lg hover:bg-primary/20 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary"
              ><path
                d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
              ></path><polyline points="14 2 14 8 20 8"></polyline></svg
            >
          </a>
        </div>
      </div>

      <div>
        <h3 class="text-2xl font-bold mb-6">Send me a Message</h3>
        <form class="glass-card p-6 space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium mb-2"
                >Name</label
              >
              <input
                type="text"
                id="name"
                placeholder="Your name"
                class="w-full px-4 py-2 rounded-lg border border-border bg-transparent focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium mb-2"
                >Email</label
              >
              <input
                type="email"
                id="email"
                placeholder="Your email"
                class="w-full px-4 py-2 rounded-lg border border-border bg-transparent focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              />
            </div>
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium mb-2"
              >Subject</label
            >
            <input
              type="text"
              id="subject"
              placeholder="Subject"
              class="w-full px-4 py-2 rounded-lg border border-border bg-transparent focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium mb-2"
              >Message</label
            >
            <textarea
              id="message"
              rows="5"
              placeholder="Your message"
              class="w-full px-4 py-2 rounded-lg border border-border bg-transparent focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            ></textarea>
          </div>

          <div>
            <button
              type="submit"
              class="w-full py-3 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors flex items-center justify-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="mr-2"
                ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
              >
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Form handling with client-side validation
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.querySelector("form");
    if (form) {
      form.addEventListener("submit", (e) => {
        e.preventDefault();

        // Simple validation
        const name = document.getElementById("name") as HTMLInputElement;
        const email = document.getElementById("email") as HTMLInputElement;
        const message = document.getElementById(
          "message"
        ) as HTMLTextAreaElement;

        let isValid = true;

        if (!name.value.trim()) {
          name.classList.add("ring-2", "ring-red-500");
          isValid = false;
        } else {
          name.classList.remove("ring-2", "ring-red-500");
        }

        if (!email.value.trim() || !email.value.includes("@")) {
          email.classList.add("ring-2", "ring-red-500");
          isValid = false;
        } else {
          email.classList.remove("ring-2", "ring-red-500");
        }

        if (!message.value.trim()) {
          message.classList.add("ring-2", "ring-red-500");
          isValid = false;
        } else {
          message.classList.remove("ring-2", "ring-red-500");
        }

        if (isValid) {
          // In a real application, you would submit the form to a server
          alert("Thank you for your message! I will get back to you soon.");
          form.reset();
        }
      });
    }
  });
</script>
