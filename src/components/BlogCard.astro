---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  readTime: string;
  category: string;
  slug: string;
  imageUrl?: string;
}

import { Folder, Calendar, Clock } from "lucide-astro";

const { title, excerpt, date, readTime, category, slug, imageUrl } =
  Astro.props;
---

<a href={`/blog/${slug}`} class="block group">
  <article
    class="glass-card overflow-hidden transition-all duration-300 hover:translate-y-[-4px] hover:shadow-2xl"
  >
    {
      imageUrl && (
        <div class="aspect-video overflow-hidden relative">
          <div class="absolute inset-0 bg-primary/20 z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
          <img
            src={imageUrl}
            alt={title}
            class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300"
          />
        </div>
      )
    }
    <div class="p-6">
      <div
        class="flex items-center text-xs font-medium text-muted-foreground mb-3 space-x-2"
      >
        <span class="inline-flex items-center">
          <Folder size={12} class="w-3 h-3 mr-1" />
          {category}
        </span>
        <span class="inline-flex items-center">
          <Calendar size={12} class="w-3 h-3 mr-1" />
          {date}
        </span>
        <span class="inline-flex items-center">
          <Clock size={12} class="w-3 h-3 mr-1" />
          {readTime} read
        </span>
      </div>
      <h3
        class="text-xl font-bold mb-2 text-foreground group-hover:text-primary transition-colors duration-200"
      >
        {title}
      </h3>
      <p class="text-muted-foreground line-clamp-2 mb-4">
        {excerpt}
      </p>
      <div class="flex justify-start">
        <span class="text-primary text-sm font-medium group-hover:underline">
          Read more
        </span>
      </div>
    </div>
  </article>
</a>
